<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainactivity_navigation_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.quizmaster.fragments.WelcomeFragment"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_profileFragment"
            app:destination="@id/quizBankFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/quizBankFragment"
        android:name="com.example.quizmaster.fragments.QuizBankFragment"
        tools:layout="@layout/fragment_quiz_bank" >
        <action
            android:id="@+id/action_profileFragment_to_viewQuizFragment"
            app:destination="@id/extendedViewQuizFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.quizmaster.fragments.AboutFragment"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/extendedViewQuizFragment"
        android:name="com.example.quizmaster.fragments.ExtendedViewQuizFragment"
        tools:layout="@layout/fragment_extended_view_quiz" >
        <action
            android:id="@+id/action_extendedViewQuizFragment_to_takeQuizFragment"
            app:destination="@id/takeQuizFragment"
            app:popUpTo="@id/extendedViewQuizFragment" />
    </fragment>
    <fragment
        android:id="@+id/takeQuizFragment"
        android:name="com.example.quizmaster.fragments.TakeQuizFragment"
        tools:layout="@layout/fragment_take_quiz" >
        <action
            android:id="@+id/action_takeQuizFragment_to_quizResultFragment"
            app:destination="@id/quizResultFragment"
            app:popUpTo="@id/extendedViewQuizFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizResultFragment"
        android:name="com.example.quizmaster.fragments.QuizResultFragment"
        tools:layout="@layout/fragment_quiz_result" >
        <action
            android:id="@+id/action_quizResultFragment_to_profileFragment"
            app:destination="@id/quizBankFragment"
            app:popUpTo="@id/quizBankFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_quizResultFragment_to_extendedViewQuizFragment"
            app:destination="@id/extendedViewQuizFragment"
            app:popUpTo="@id/extendedViewQuizFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>